{
  "name": "@harbor/utils",
  "type": "module",
  "version": "0.5.0",
  "license": "MIT",
  "author": "John Horback",
  "description": "A mono repo containing packages with common web application script utilities.",
  "main": "index.js",
  "types": "index.d.ts",
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --build && vite build",
    "clean": "tsc --build --clean",
    "test": "tsc --build && jest",
    "test:coverage": "tsc --build && jest --coverage",
    "test:watch": "tsc --build && jest --watch"
  },
  "dependencies": {
    "@vanillawc/wc-markdown": "^1.6.10",
    "lit-element": "^2.4.0",
    "lit-html": "^1.4.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "4.3.3",
    "vite": "^2.4.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|ts)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(lit-html|lit-element))"
    ]
  }
}
