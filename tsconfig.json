{
  // domx
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "ES2020",
    "moduleResolution": "node",
    "composite": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    // new standard for class fields using Object.define
    // will cause problems with initial values and for TS/lit
    "useDefineForClassFields": false,
    "plugins": [
      // adds type checking and code completion to lit-html
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },

  "files": [],
  "references": [
    { "path": "./packages/functional" },
    { "path": "./packages/Middleware" },
    { "path": "./packages/linkProp" },
    { "path": "./packages/EventMap" },
    { "path": "./packages/StateChange" },
    { "path": "./packages/testUtils" },
    { "path": "./packages/DataElement" },
    { "path": "./packages/Router" }
  ]
}
